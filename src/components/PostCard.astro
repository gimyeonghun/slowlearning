---
import type { CollectionEntry } from "astro:content";
import getPostUrl from "../scripts/postUrl";

interface Props {
    post: CollectionEntry<"posts">;
    url: string;
    showSeriesLink?: boolean;
}

const { post, url, showSeriesLink = true } = Astro.props;
const { title, date, type, link, author, tags, draft, series } = post.data;
const isDev = import.meta.env.DEV;

const year = date.getFullYear();
const month = date.toLocaleString("en-US", { month: "long" });
const day = String(date.getDate()).padStart(2, "0");

const formattedDate = new Intl.DateTimeFormat("en-US", {
    year: "numeric",
    month: "short",
    day: "numeric",
}).format(date);
---

<article class="mb-8 pb-2 border-b border-gray-200 last:border-0">
    <div class="flex items-baseline gap-2 mb-2 flex-wrap">
        <time class="text-sm text-gray-500" datetime={date.toISOString()}>
            <a class="hover:underline" href={`/${year}/${month}`}
                >{month.slice(0, 3)}</a
            >
            <a class="hover:underline" href={`/${year}/${month}/${day}`}
                >{day}</a
            >,
            <a class="hover:underline" href={`/${year}/`}>{year}</a>
        </time>
        <span class="text-xs px-2 py-1 rounded bg-gray-200 text-gray-700">
            {type}
        </span>
        {
            draft && isDev && (
                <span class="text-xs px-2 py-1 rounded bg-yellow-200 text-yellow-800 font-medium">
                    DRAFT
                </span>
            )
        }
        {
            series && showSeriesLink && (
                <a
                    href={`/series/${series}`}
                    class="text-xs px-2 py-1 rounded bg-purple-100 text-purple-700 hover:bg-purple-200"
                >
                    ðŸ“š Series
                </a>
            )
        }
    </div>

    {
        type === "link" ? (
            <h2 class="text-xl font-semibold mb-2">
                <a
                    href={link}
                    class="text-green-700 hover:text-green-800"
                    target="_blank"
                    rel="noopener"
                >
                    {title} â†’
                </a>
            </h2>
        ) : type === "quote" ? (
            <h2 class="text-xl font-semibold mb-2">
                <a href={url} class="hover:text-blue-600">
                    {title}
                </a>
            </h2>
        ) : (
            <h2 class="text-xl font-semibold mb-2">
                <a href={url} class="hover:text-blue-600">
                    {title}
                </a>
            </h2>
        )
    }

    {
        type === "quote" && author && (
            <p class="text-sm text-gray-600 mb-2">â€” {author}</p>
        )
    }

    <div class="text-gray-700 prose prose-sm max-w-none mb-3">
        <slot />
    </div>

    <div class="flex items-center gap-2 flex-wrap">
        <a
            href={getPostUrl(post)}
            class="text-xs text-green-700 hover:text-blue-600">permalink</a
        >
        {
            tags &&
                tags.length > 0 &&
                tags.map((tag) => (
                    <a
                        href={`/tags/${tag}`}
                        class="text-xs px-2 py-1 rounded bg-blue-100 text-blue-700 hover:bg-blue-200"
                    >
                        #{tag}
                    </a>
                ))
        }
    </div>
</article>
